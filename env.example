# Postgres
POSTGRES_DB=domainapp
POSTGRES_USER=domainapp
POSTGRES_PASSWORD=strongpassword

# JWT & App
JWT_SECRET=change_me_super_long
JWT_REFRESH_SECRET=change_me_even_longer
ACCESS_TOKEN_TTL_MIN=30
REFRESH_TOKEN_TTL_DAYS=14

# Public URLs
PUBLIC_WEB_URL=http://localhost:3000
PUBLIC_API_URL=http://localhost:8000

# Mail (choose one path)
MAIL_PROVIDER=RESEND   # RESEND | SMTP
RESEND_API_KEY=your_resend_key
EMAIL_FROM="DomainApp <no-reply@yourdomain.com>"

SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=xxxxxx

# DNSPod / Tencent Cloud
DNSPOD_SECRET_ID=xxx
DNSPOD_SECRET_KEY=yyy
DNS_ROOT_DOMAIN=example.com       # 顶级域名，用于分发的主域
DNS_DEFAULT_TTL=600

# Proxy / TLS
CADDY_EMAIL=ops@yourdomain.com

# CORS/Cookies
COOKIE_DOMAIN=localhost


